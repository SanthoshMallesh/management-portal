{
  "compilerOptions": {
    "target": "esnext",
    "outDir" : "./dist/",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "baseUrl" : "./src",
    "resolveJsonModule": true,
    "paths": {
      "@actions/*": ["actions/*"], 
      "@assets/*": ["assets/*"], 
      "@selectors/*": ["selectors/*"], 
      "@reducers/*": ["reducers/*"], 
      "@components/*": ["components/*"], 
      "@layout/*": ["layout/*"],
      "@apps/*": ["apps/*"], 
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"], 
      "@actionTypes": ["constants/ActionTypes"], 
      "@theme": ["constants/Theme"], 
      "@api": ["apiClient"], 
      "@constants": ["constants/index"],   
      "@config": ["constants/Config"], 
      "@testHelpers/*": ["__tests__/helpers/*"]
    },
    "lib": [
      "es2015",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object",
      "dom",
    ], 
    "module": "esnext",
    "removeComments": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
  },
}
